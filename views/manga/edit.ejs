<head>
    <link rel="stylesheet" href="/css/forms.css">
</head>

<div class="container">
    <form>
        <div class="row">
          <div class="col-md-6">
            <label for="title">Title</label>
            <input type="text" class="form-control" name="title" placeholder="Title">
          </div>
          <div class="col-md-6">
            <label for="author">Author</label>
            <input type="text" class="form-control" name="author" placeholder="Author">
          </div>
        </div>
        
        <div class="row">
            <div class="col-md-6">
              <label for="other_names">Other Names</label>
              <input type="text" class="form-control" name="other_names" placeholder="Other Names">
            </div>
            <div class="col-md-6">
                <label for="artists">Artists</label>
                <input type="text" class="form-control" name="artists" placeholder="Artists">
            </div>
        </div>
        <div class="form-group">
            <label for="exampleFormControlTextarea1">Description</label>
            <textarea class="form-control" name="description" rows="3"></textarea>
        </div>
          
        <div class="row">
            <div class="col-md-6">
                <label for="Origin">Origin</label>
                <select class="form-control" name="origin">
                  <option>select origin</option>
                  <option>manga</option>
                  <option>manhwa</option>
                  <option>manhua</option>
                </select>
            </div>
        <div class="col-md-6">
            <label for="geners">Geners</label>
            <span id="in"></span>
            <select class="form-control geners" name="geners">
              <option>Select Geners</option>
              <option value="Action">Action</option>
              <option value="Adventure">Adventure</option>
              <option value="Comedy">Comedy</option>
              <option value="Crime">Crime</option>
              <option value="Drama">Drama</option>
              <option value="Fantasy">Fantasy</option>
              <option value="Horror">Horror</option>
              <option value="Magic">Magic</option>
              <option value="Martial arts">Martial arts</option>
              <option value="Mystery">Mystery</option>
              <option value="Romance">Romance</option>
              <option value="Reincarnation">Reincarnation</option>
              <option value="Slice of life">Slice of life</option>
              <option value="School life">School life</option>
              <option value="Sci fi">Sci fi</option>
              <option value="Seinen">Seinen</option>
              <option value="Shounen">Shounen</option>
              <option value="Superhero">Superhero</option>
              <option value="Sports">Sports</option>
              <option value="Tragedy">Tragedy</option>
              <option value="Survival">Survival</option>
              <option value="Supernatural">Supernatural</option>
            </select>
    </div>
            
        </div>
        <div class="col-md-6">
            <label for="reading_direction">Reading Direction</label>
            <select class="form-control" name="reading_direction">
              <option>select origin</option>
              <option value="Left-to-Right">Left-to-Right</option>
              <option value="Right-to-Left">Right-to-Left</option>
            </select>
        </div>
       
        <div class="button-center">
            <button type="submit" class="btn btn-primary submit">Submit</button>
        </div>
        
      </form>

</div>