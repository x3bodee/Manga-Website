<head>
  <title>All Manga</title>
</head>
<section class="all-manga mt-4">
    <div class="container-fluid">
        <div class="row">
        <div class="col-10 col-md-6 col-xl-4 mx-auto">
        <form action="/findmanga" method="POST" >
         <div class="input-group mb-3">
            <span class="input-group-text">
            <button  type="submit"><i class="fas fa-search fa-lg search-icon"></i></button>
            </span>
            <input type="text" name="Search" class="form-control" id="search-item" placeholder="manga...">
        </div>
        </form>
        </div>
        </div> <!--end row-->

    <!-- button row-->
    <div class="row">
      <div class="col-12 col-md-6 col-xl-4 mx-auto text-center">
          <div class="btn-group mb-5 flex-wrap button-group
           filter-button-group" role="group">

           <button type="button" class="btn btn-classified" data-filter="*">All</button>
           <button type="button" class="btn btn-classified" data-filter=".manga">Manga</button>
           <button type="button" class="btn btn-classified" data-filter=".manhwa">Manhwa</button>
           <button type="button" class="btn btn-classified" data-filter=".manhua">Manhua</button>
           
          </div>
      </div>
    </div>
  <!-- end button row-->

  <!--secound row-->
  <div class="row grid mt-2 text-center mx-auto" >
   <%manga.forEach((m)=>{%> 
     <%if(m.origin == "manga"){%>
   <!--manga-1 -->
   <div class="col-12 mx-auto col-md-4 col-xl-3 mt-2 manga">
     <div class="manga-poster" style="background-image: url('<%=m.poster%>')">
         <div class="manga-title">
           <h5><a href="manga/show/<%=m._id%>"><%=m.title%></a></h5>
        </div> 
      </div>
   </div>
  <%}if(m.origin == "manhwa"){%> 
   <div class="col-12 mx-auto col-md-4 col-xl-3 mt-2 manhwa">
      <div class="manga-poster" style="background-image: url('<%=m.poster%>')">
          <div class="manga-title">
            <h5><a href="manga/show/<%=m._id%>"><%=m.title%></a></h5>
         </div> 
       </div>
    </div>
   <%}if(m.origin == "manhua"){%> 
      <div class="col-12 mx-auto col-md-4 col-xl-3 mt-2 manhua">
         <div class="manga-poster" style="background-image: url('<%=m.poster%>')">
             <div class="manga-title">
               <h5><a href="manga/show/<%=m._id%>"><%=m.title%></a></h5>
            </div> 
          </div>
       </div>
      <%}%>
  <%})%>
  
      
  </section>